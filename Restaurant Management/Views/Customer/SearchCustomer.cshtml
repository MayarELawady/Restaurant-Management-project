
@model IEnumerable<Restaurant_Management.Models.Customer>

@{
    ViewBag.Title = "SearchCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchCustomer</h2>

<p>
    @using (Html.BeginForm("SearchCustomer", "Customer", FormMethod.Post))

    {
        @Html.TextBox("search")
        <input type="submit" value="search" />
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>CustomerId</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Mail</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" style="color:red">
                        No Match Any Document
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerId</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Mail</td>


                    </tr>
                }
            }
        </tbody>
    </table>
    @Html.ActionLink("Create New", "Create")



